@model PilotTasksUpworkService.Model.CreateTasksModel
@{
}

<p>New Tasks</p>
<form asp-action="CreateTask">
    <div class="form-group">
          <label asp-for="ProfileId" class="control-label"></label>
         @Html.LabelFor(m => m.ProfileId, "Select a Profile")
        @Html.DropDownListFor(m => m.ProfileId, new SelectList(Model.ProfileList, "ProfileId", "DisplayName"), "Please select a Assignee", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label asp-for="TaskName" for="FirstName">Tasks Name</label>
        <input asp-for="TaskName" type="text" class="form-control" name="TaskName" placeholder="TaskName" required>
    </div>
    <div class="form-group">
        <label asp-for="TaskDescription" for="LastName">Tasks Description</label>
        <input asp-for="TaskDescription" type="text" class="form-control" name="TaskDescription" placeholder="TaskName" required>
    </div>
    <div class="form-group">
        <label asp-for="StartTime" for="StartTime">Start Time</label>
        <input asp-for="StartTime" type="datetime-local" class="form-control" name="StartTime" placeholder="StartTime" required>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
         @Html.LabelFor(m => m.Status, "Select a Status")
        @Html.DropDownListFor(m => m.Status, new SelectList(Model.StatusList, "StatusId", "StatusDisplay"), "Please select a Status", new { @class = "form-control" })
    </div>
 
    @if (TempData["msg"] != null)
    {
            <div class="mb-3">
            @TempData["msg"]
            </div>
    }

    <button type="submit" class="btn btn-primary">Save</button>
</form>
